                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:text="Select your University"
                android:textAlignment="center"
                android:textSize="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"/>

            <Button

                android:background="#f44242"
                android:id="@+id/Algoma"
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:text="Algoma University"
                android:layout_below="@+id/textView1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignLeft="@+id/Brock"
                android:layout_alignStart="@+id/Brock"
                android:layout_alignRight="@+id/Brock"
                android:layout_alignEnd="@+id/Brock" />

            <Button
                android:background="#f44242"
                android:id="@+id/Brock"
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:text="Brock University"
                android:layout_below="@+id/Algoma"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignRight="@+id/Carleton"
                android:layout_alignEnd="@+id/Carleton"
